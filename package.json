{
  "name": "@arpinum/log",
  "version": "4.1.3",
  "description": "Simple module to log on stdout or stderr",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-log.git",
  "keywords": [
    "log",
    "logger",
    "console",
    "12 factor",
    "Arpinum"
  ],
  "devDependencies": {
    "@types/jest": "23.1.0",
    "@types/node": "^8.10.20",
    "@types/sinon": "5.0.1",
    "jest": "23.1.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.5",
    "sinon": "6.0.0",
    "tcomb": "3.2.27",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.0"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  }
}
