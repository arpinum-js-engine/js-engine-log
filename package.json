{
  "name": "@arpinum/log",
  "version": "5.0.0",
  "description": "Simple module to log on stdout or stderr",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-log.git",
  "keywords": [
    "log",
    "logger",
    "console",
    "12 factor",
    "Arpinum"
  ],
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "10.12.10",
    "@types/sinon": "5.0.7",
    "jest": "23.6.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.2",
    "sinon": "7.1.1",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.0"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  }
}
